---
import { programs } from "../data-list/";
import ContentWidth from "../components/ContentWidth.astro";
import Card from "../components/Card.astro";
---

<section class="bg-white py-16">
  <ContentWidth>
    <div class="flex flex-col md:flex-row items-center md:items-start gap-10">

      <div class="md:basis-3/7 text-center md:text-left">
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-extrabold text-black leading-tight animate-fade-in">
          Nuestros Programas
        </h1>
      </div>

      <div class="md:basis-1/7 flex justify-center md:justify-start">
        <img src="/images/flecha.png" alt="" class="h-16 md:h-20 animate-bounce-slow" />
      </div>

      <div class="md:basis-3/7 text-center md:text-left">
        <p class="text-base sm:text-lg text-gray-700 leading-relaxed animate-fade-in delay-100">
          Fomentamos una formación integral con enfoque académico, en un ambiente inclusivo y democrático. Promovemos relaciones solidarias con el objetivo de que nuestros egresados sean ciudadanos activos en el desarrollo de su comunidad y del país.
        </p>
      </div>

    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-x-4 gap-y-8 mt-12">
      {
        programs.map((item) => (
          <Card
            title={item.title}
            description={item.description}
            iconName={item.iconName}
            size="xs"
            descriptionSize="xs"
          />
        ))
      }
    </div>
  </ContentWidth>
</section>

