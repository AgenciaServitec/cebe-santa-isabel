---
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";

import ContentWidth from "./ContentWidth.astro";
---

<footer class="bg-orange-50 text-orange-900 border-t border-orange-200">
  <ContentWidth>
    <div class="flex flex-col md:flex-row justify-between items-center py-8 px-6 md:px-10 gap-6">
      <Image
        src="/logo.webp"
        alt="Logo del CEBE Santa Isabel"
        width="100"
        height="100"
        loading="lazy"
        class="w-16 md:w-20 hover:scale-105 transition"
      />

      <nav>
        <ul class="flex flex-col md:flex-row items-center gap-4 md:gap-8 text-base font-medium">
          <li>
            <a href="/" class="hover:text-orange-600 transition duration-200">Inicio</a>
          </li>
          <li>
            <a href="/about-us" class="hover:text-orange-600 transition duration-200">Nosotros</a>
          </li>
          <li>
            <a href="/infrastructure" class="hover:text-orange-600 transition duration-200">Infraestructura</a>
          </li>
          <li>
            <a href="/educational-proposal" class="hover:text-orange-600 transition duration-200">Propuesta Educativa</a>
          </li>
        </ul>
      </nav>

      <a
        href="/contact"
        class="bg-orange-500 hover:bg-orange-600 text-white px-6 py-2 rounded-full font-semibold shadow-md transition duration-300"
      >
        Contáctanos
      </a>
    </div>

    <div class="border-t border-orange-200"></div>

    <div class="flex flex-col-reverse md:flex-row justify-between items-center py-6 px-6 md:px-10 gap-4">
      <p class="text-sm text-center">
        © 2025 CEBE Santa Isabel. Hecho con ❤️ por <a href="https://servitec.site/" target="<_blank></_blank>" class="text-orange-600 hover:underline">Servitec</a>
      </p>

      <div class="flex gap-3">
        <a
          href="#"
          class="bg-[#3b5998] hover:bg-[#2d4373] text-white rounded-full p-2 transition"
          aria-label="Facebook"
        >
          <Icon name="facebook" class="w-5 h-5" />
        </a>
        <a
          href="#"
          class="bg-gradient-to-tr from-pink-500 to-yellow-500 hover:opacity-90 text-white rounded-full p-2 transition"
          aria-label="Instagram"
        >
          <Icon name="instagram" class="w-5 h-5" />
        </a>
        <a
          href="#"
          class="bg-black hover:bg-gray-800 text-white rounded-full p-2 transition"
          aria-label="X / Twitter"
        >
          <Icon name="x" class="w-5 h-5" />
        </a>
      </div>
    </div>
  </ContentWidth>
</footer>
