<header>
  <div class="flex justify-between items-center py-3 px-10 w-full">
    <div>
      <img class="w-10 h-10" src="/images/logo.jpg" alt="CEBE Santa Isabel" />
    </div>

    <nav id="menu" class="hidden md:flex gap-10 items-center">
      <a href="/">Inicio</a>
      <a href="/nosotros">Nosotros</a>
      <a href="/infraestructura">Infraestructura</a>
      <a href="/contacto">Contacto</a>
    </nav>

    <div class="hidden md:block">
      <button class="button border-1 rounded-xl p-3"> Cont√°ctanos </button>
    </div>

    <button id="menu-btn" class="md:hidden focus:outline-none">
      <svg
        class="w-6 h-6"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>
  </div>

  <nav
    id="mobile-menu"
    class="md:hidden hidden flex-col items-center px-6 gap-2"
  >
    <a href="#" class="block py-2">Inicio</a>
    <a href="#" class="block py-2">Servicios</a>
    <a href="#" class="block py-2">Acerca</a>
    <a href="#" class="block py-2">Contacto</a>
  </nav>
</header>

<script>
  const btn = document.getElementById("menu-btn") as HTMLButtonElement;
  const mobileMenu = document.getElementById("mobile-menu") as HTMLElement;

  btn.addEventListener("click", () => {
    mobileMenu.classList.toggle("hidden");
    mobileMenu.classList.toggle("flex");
  });
</script>
