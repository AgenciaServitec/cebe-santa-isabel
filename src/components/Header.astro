---
import { Image } from "astro:assets";

import ContentWidth from "./ContentWidth.astro";
---

<header>
  <ContentWidth>
    <div class="flex justify-between items-center py-3 px-10 w-full">
      <Image
        src="/logo.jpg"
        alt="Logo del CEBE Santa Isabel"
        width="200"
        height="150"
        loading="eager"
        class="w-10"
      />

      <nav id="menu" class="hidden md:flex">
        <ul class="flex items-center gap-10">
          <li><a href="/">Inicio</a></li>
          <li><a href="/about-us">Nosotros</a></li>
          <li><a href="/infrastructure">Infraestructura</a></li>
          <li><a href="/educational-proposal">Propuesta Educativa</a></li>
        </ul>
      </nav>

      <div class="hidden md:block">
        <a href="/contact" class="button border-1 rounded-xl p-3">
          Cont√°ctanos
        </a>
      </div>

      <button id="menu-btn" class="md:hidden focus:outline-none">
        <svg
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <nav
      id="mobile-menu"
      class="md:hidden hidden flex-col items-center px-6 gap-2"
    >
      <a href="#" class="block py-2">Inicio</a>
      <a href="#" class="block py-2">Servicios</a>
      <a href="#" class="block py-2">Acerca</a>
      <a href="#" class="block py-2">Contacto</a>
    </nav>
  </ContentWidth>
</header>

<script>
  const btn = document.getElementById("menu-btn") as HTMLButtonElement;
  const mobileMenu = document.getElementById("mobile-menu") as HTMLElement;

  btn.addEventListener("click", () => {
    mobileMenu.classList.toggle("hidden");
    mobileMenu.classList.toggle("flex");
  });
</script>
