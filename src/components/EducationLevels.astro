---
import ContentWidth from "./ContentWidth.astro";
import { educationLevels } from "../data-list";
import { Image } from "astro:assets";
---

<section class="bg-gradient-to-b from-orange-50 via-white to-white py-24">
  <ContentWidth>
    <div class="space-y-32">
      {educationLevels.map((level, idx) => (
        <section
          class={`grid grid-cols-1 md:grid-cols-2 gap-20 items-center ${
            idx % 2 !== 0 ? "md:flex-row-reverse" : ""
          }`}
          id={level.level}
        >
          <div class="space-y-10">
            <header class="space-y-4">
              <h2 class="text-4xl font-extrabold text-slate-800 tracking-tight">
                {level.title}
              </h2>
              <p class="text-slate-600 text-base sm:text-lg leading-relaxed">
                {level.description}
              </p>
            </header>
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
              {level.characteristics.map((char) => (
                <div
                  class="group relative overflow-hidden rounded-xl border border-slate-200 bg-white p-6 shadow transition-all duration-300 ease-out transform hover:-translate-y-1 hover:scale-[1.03] hover:shadow-2xl motion-safe:hover:rotate-[0.3deg]"
                >
                  <div class="absolute inset-0 z-0 before:content-[''] before:absolute before:inset-0 before:bg-gradient-to-tr before:from-orange-100 before:to-white before:opacity-0 group-hover:before:opacity-60 before:transition-opacity before:duration-300 rounded-xl" />
                  <div class="relative z-10">
                    <h3 class="text-lg font-semibold text-orange-700 group-hover:text-orange-800 transition-colors duration-200">
                      {char.title}
                    </h3>
                    <p class="text-slate-600 text-sm mt-2 group-hover:text-slate-700 transition-colors duration-200">
                      {char.description}
                    </p>
                  </div>
                </div>
              ))}
            </div>
          </div>

          <div class="flex flex-col items-center space-y-6">
            <div class="relative w-full max-w-md md:max-w-lg lg:max-w-xl">
              <div class="absolute -inset-1 bg-gradient-to-tr from-orange-200 via-orange-100 to-transparent rounded-2xl blur-xl opacity-30"></div>
              <Image
                src={level.image}
                alt={level.title}
                width="500"
                height="500"
                class="relative w-full object-contain rounded-2xl shadow-xl border border-slate-200 hover:animate-squeeze"
              />
            </div>
            <a
              href="/contact"
              class="mt-4 px-6 py-3 rounded-full bg-orange-600 text-white font-semibold shadow-lg hover:bg-orange-700 transition transform hover:scale-105 motion-safe:hover:rotate-[0.5deg]"
            >
              {level.question}
            </a>
          </div>
        </section>
      ))}
    </div>
  </ContentWidth>
</section>
